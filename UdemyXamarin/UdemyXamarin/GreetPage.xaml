<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UdemyXamarin.GreetPage">
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness" iOS="0, 20, 0, 0" Android="0, 40, 0, 0"/>
    </ContentPage.Padding>
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center" BindingContext="{x:Reference slider}">
            <BoxView Color="Green" Opacity="{Binding Value}"/>
            <Label Text="{Binding Value, StringFormat='Value is {0:F2}'}" Opacity="{Binding Value}" x:Name="label"/>
            <Slider x:Name="slider"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>